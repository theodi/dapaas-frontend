<div class="container">
    <div class="row">
        <div class="hero">
            <% unless hero_link.blank? %>
            <a href="<%= hero_link %>">
            <% end %>
            <%= image_tag hero_image, alt: hero_alt %>
            <% unless hero_link.blank? %>
            </a>
            <% end %>
            <% unless hero_text.blank? %>
              <div class="hero-label">
                  <div class="annotation">
                      <%= hero_text.html_safe %>
                  </div>
              </div>
            <% end %>
        </div>
    </div>
</div>
